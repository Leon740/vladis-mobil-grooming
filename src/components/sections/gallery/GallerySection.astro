---
import DATA from './galleryData.json';
import { Img } from '@components/global/Img';
---

<div class="container max-w-full">
  <ul class="flex flex-row flex-wrap -m-8">
    {
      DATA.images.map(({ src, alt }) => (
        <li class="p-8 w-1/3 xl:w-1/6">
          <Img
            src={src}
            alt={alt}
            width={256}
            height={170}
            className="w-full object-cover rounded-8 overflow-hidden"
          />
        </li>
      ))
    }
  </ul>
</div>
