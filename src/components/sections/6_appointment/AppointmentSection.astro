---
import DATA from './appointmentData.json';
import { Wave } from '@components/global/Wave';
import SectionHeader from '@components/global/SectionHeader.astro';
import { AppointmentForm } from './AppointmentForm';
---

<Wave>
  <div class="container section-gap-64">
    <SectionHeader data={DATA.header} />

    <form name="appointment" data-netlify="true" netlify-honeypot="bot-field" hidden>
      <input type="text" name="name" />
      <input type="email" name="email" />
      <input type="text" name="mobile" />
      <textarea name="message"></textarea>
      <input type="text" name="contact" />
      <input type="text" name="street" />
      <input type="text" name="city" />
      <input type="text" name="state" />
      <input type="text" name="zip" />
      <input type="text" name="date" />
    </form>

    <AppointmentForm client:only="preact" />
  </div>
</Wave>
